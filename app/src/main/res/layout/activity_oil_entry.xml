<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OilEntryActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/mileage"
            android:ems="10"
            android:id="@+id/etMileage"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:inputType="number"
            app:layout_constraintBottom_toBottomOf="@+id/etRemindAfter"
            app:layout_constraintTop_toTopOf="@+id/etRemindAfter"
            app:layout_constraintEnd_toStartOf="@+id/etRemindAfter" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvReminder"
            android:text="@string/remindAfter"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/etRemindAfter"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/etRemindAfter" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etRemindAfter"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etRemindAfter"
            android:text="@string/oil_remind_const_15k"
            app:layout_constraintStart_toEndOf="@+id/etMileage" android:layout_marginStart="8dp"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvReminder"/>
</androidx.constraintlayout.widget.ConstraintLayout>