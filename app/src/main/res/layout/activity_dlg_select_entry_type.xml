<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DlgSelectEntryType">

    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/rgEntryTypes" android:checkedButton="@+id/rbFuel">
        <RadioButton
                android:text="@string/fuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbFuel" android:layout_weight="1"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"/>
        <RadioButton
                android:text="@string/oil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rbOil" android:layout_weight="1"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/rbFuel"
                android:textSize="15sp"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>