<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FuelEntryActivity">

    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sCarNames" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:spinnerMode="dropdown"/>
    <Button
            android:text="@string/save"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:onClick="onFuelEntrySave"
            android:id="@+id/bSaveFuelEntry" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="@string/odometer"
            android:ems="10"
            android:id="@+id/etOdometer"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:inputType="number"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/sCarNames"/>
    <TextView
            android:text="@string/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tOr"
            app:layout_constraintTop_toTopOf="@+id/etOdometer"
            app:layout_constraintBottom_toBottomOf="@+id/etOdometer"
            app:layout_constraintVertical_bias="0.615" app:layout_constraintStart_toEndOf="@+id/etOdometer"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/etMileage"
            android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:hint="@string/mileage"
            android:ems="10"
            android:id="@+id/etMileage"
            android:importantForAutofill="no"
            tools:targetApi="o"
            app:layout_constraintTop_toTopOf="@+id/etOdometer"
            app:layout_constraintBottom_toBottomOf="@+id/etOdometer" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:inputType="number"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/fuelAmount"
            android:ems="10"
            android:id="@+id/etFuelAmount"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/etOdometer"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etPerLiter"
            android:importantForAutofill="no"
            tools:targetApi="o"
            app:layout_constraintTop_toTopOf="@+id/etFuelAmount"
            app:layout_constraintBottom_toBottomOf="@+id/etFuelAmount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/etFuelAmount"
            android:layout_marginStart="16dp" android:inputType="numberDecimal" android:hint="@string/perLiter"
    />
</android.support.constraint.ConstraintLayout>