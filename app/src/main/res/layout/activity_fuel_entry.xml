<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FuelEntryActivity">

    <EditText
            android:id="@+id/etOdometer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/odometer"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="o" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/fuelAmount"
            android:ems="10"
            android:id="@+id/etFuelAmount"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/etOdometer"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/etPerLiter"
            android:importantForAutofill="no"
            tools:targetApi="o"
            app:layout_constraintTop_toTopOf="@+id/etFuelAmount"
            app:layout_constraintBottom_toBottomOf="@+id/etFuelAmount" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/etFuelAmount"
            android:layout_marginStart="16dp" android:inputType="numberDecimal" android:hint="@string/perLiter"
    />

</androidx.constraintlayout.widget.ConstraintLayout>